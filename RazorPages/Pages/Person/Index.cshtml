@page
@model IndexModel

<h1>Person Index</h1>

<a asp-page="Create">
    <button>Create Person</button>
</a>

<table class="table text-light">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Person.Id)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Person.Name)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Person.Age)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    @foreach (var item in Model.Persons)
    {
        <tbody>
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Age
                </td>
                <td>
                    <form method="post" asp-route-id="@item.Id">
                        <button type="submit">Delete</button>
                    </form>
                    <a asp-page="Update" asp-route-id="@item.Id">
                        Update
                    </a>
                </td>
            </tr>
        </tbody>

    }
</table>